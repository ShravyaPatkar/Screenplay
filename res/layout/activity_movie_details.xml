<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/Image_details"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:scaleType="fitXY"
        android:background="@drawable/imageviewborders" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_details"
        android:layout_below="@+id/Image_details"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/language_details"
        android:layout_below="@+id/description_details"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/BookTickets"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/description_details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="20dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/ticketbookbutton"
        android:padding="10dp"
        android:text="Book Your Tickets"
        android:textColor="@color/white" />
</RelativeLayout>
