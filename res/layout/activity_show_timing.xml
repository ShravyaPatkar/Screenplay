<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".ShowTimingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/bdate"
        android:layout_width="152dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/datebutton"
        android:text="Select Date"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:id="@+id/edate"
        android:layout_alignBaseline="@+id/bdate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="180dp"
        android:textColor="@color/Black"/>

    <TextView
        android:id="@+id/timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bdate"
        android:layout_alignStart="@+id/tenam"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:text="@string/Timing"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <CheckBox
        android:id="@+id/sevenam"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timing"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/Black"

        android:text="7.00am - 10.00am" />

    <CheckBox
        android:id="@+id/tenam"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sevenam"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/Black"
        android:layout_marginBottom="-78dp"
        android:text="10.30am - 1.30pm" />

    <CheckBox
        android:id="@+id/twopm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenam"
        android:textColor="@color/Black"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="303dp"
        android:text="2.00pm - 5.00pm" />

    <CheckBox
        android:id="@+id/fivepm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twopm"
        android:layout_alignParentStart="true"
        android:textColor="@color/Black"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="335dp"
        android:text="5.30pm - 8.30pm" />

    <Button
        android:id="@+id/resettime"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_below="@+id/fivepm"
        android:textColor="@color/Black"
        android:layout_marginTop="11dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentStart="true"
        android:text="Reset" />


    <Button
        android:id="@+id/savetime"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_below="@+id/fivepm"
        android:layout_marginTop="11dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="150dp"
        android:text="save"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/location"
        android:layout_height="wrap_content"
        android:layout_below="@id/resettime"
        android:layout_marginStart="22dp"
        android:padding="8dip"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        android:text="@string/location"
        android:textColor="@color/Black"
        android:textStyle="bold"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/location"
        android:entries="@array/twolocation" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theatre"
        android:padding="8dip"
        android:textSize="16dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="10dip"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:text="@string/theatre" />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="8dip"
        android:layout_below="@+id/theatre" />

    <Button
        android:id="@+id/Bookseats"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="20dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:background="@drawable/ticketbookbutton"
        android:padding="10dp"
        android:text="Book Your Seats"
        android:textColor="@color/white" />







</RelativeLayout>